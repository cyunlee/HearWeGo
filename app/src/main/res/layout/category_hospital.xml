<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 주변시설 - 병원 카테고리 -->

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="823dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1917dp"
        android:layout_marginTop="1039dp"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints" >

        <!-- Bar Top -->
        <RelativeLayout
            android:id="@+id/bar_top"
            android:layout_width="411dp"
            android:layout_height="92dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bar_top"
            tools:ignore="MissingConstraints">

            <!-- Status Bar -->

            <!-- Frame category -->
            <RelativeLayout
                android:id="@+id/title_hospital"
                android:layout_width="411dp"
                android:layout_height="92dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/frame_29"
                tools:ignore="MissingConstraints">

                <!-- 병원 -->
                <TextView
                    android:id="@+id/카테고리이름"
                    android:layout_width="67dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="19dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="병원"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>


        <!-- Frame Menu -->
        <RelativeLayout
            android:id="@+id/frame_menu"
            android:layout_width="395dp"
            android:layout_height="546dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="156dp"
            android:background="@drawable/frame_menu">

            <!-- Frame Menu Button 1 -->
            <RelativeLayout
                android:id="@+id/menu_facility"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:background="@drawable/default_yellow">

                <!-- 서울대학교병원 -->
                <TextView
                    android:id="@+id/서울대학교병원"
                    android:layout_width="232dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="81.5dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="서울대학교병원"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <!-- Frame Menu Button 2 -->
            <RelativeLayout
                android:id="@+id/menu_subway"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="114dp"
                android:background="@drawable/default_yellow">

                <!-- 병원2 -->
                <TextView
                    android:id="@+id/병원2"
                    android:layout_width="89dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="153dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="병원2"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <!-- Frame Menu Button 3 -->
            <RelativeLayout
                android:id="@+id/menu_toilet"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="228dp"
                android:background="@drawable/default_yellow">

                <!-- 병원3 -->
                <TextView
                    android:id="@+id/병원3"
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="152.5dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="병원3"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <!-- Frame Menu Button 4 -->
            <RelativeLayout
                android:id="@+id/menu_hospital"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="342dp"
                android:background="@drawable/default_yellow">

                <!-- 병원4 -->
                <TextView
                    android:id="@+id/병원4"
                    android:layout_width="91dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="152dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="병원4"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <!-- Frame Menu Button 5 -->
            <RelativeLayout
                android:id="@+id/menu_pharmacy"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="456dp"
                android:background="@drawable/default_yellow">

                <!-- 병원5 -->
                <TextView
                    android:id="@+id/주변시설선택"
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:layout_marginLeft="152.5dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="병원5"
                    android:textColor="@color/yellow"
                    android:textSize="36dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- list button -->
        <RelativeLayout
            android:id="@+id/list_button"
            android:layout_width="411dp"
            android:layout_height="84dp"
            android:layout_marginTop="739dp"
            android:background="@drawable/list_button">

            <!-- previous -->
            <ImageButton
                android:id="@+id/previous"
                android:layout_width="205dp"
                android:layout_height="84dp"
                android:background="@drawable/previous_button"/>

            <!-- home -->
            <ImageButton
                android:id="@+id/home"
                android:layout_width="205dp"
                android:layout_height="84dp"
                android:layout_marginLeft="206dp"
                android:background="@drawable/home_button"/>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



